<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="centerCrop"
        android:cropToPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FFEB3B"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />
    <TextView
        android:id="@+id/text_view_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        tools:text="Hagagatan 4, 2tr"/>

    <TextView
        android:id="@+id/text_view_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_address"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:textColor="#A19F9F"
        tools:text="Vasastan Odenplan, Stockholm"/>

    <TextView
        android:id="@+id/text_view_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_location"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        tools:text="6 150 000 kr"/>
    <TextView
        android:id="@+id/text_view_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/text_view_price"
        app:layout_constraintTop_toBottomOf="@+id/text_view_location"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        tools:text="58 m2"/>
    <TextView
        android:id="@+id/text_view_rooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/text_view_area"
        app:layout_constraintTop_toBottomOf="@+id/text_view_location"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        tools:text="2.5 rum"/>

    <TextView
        android:id="@+id/text_view_days_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_location"
        android:layout_marginEnd="16dp"
        android:textSize="14sp"
        tools:text="11 dagar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
